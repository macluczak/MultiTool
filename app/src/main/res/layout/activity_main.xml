<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/motionlayout">


        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:padding="20sp"
            android:shadowColor="#FFC107"
            android:shadowDx="15"
            android:shadowDy="13"
            android:shadowRadius="1"
            android:text="MultiTool"
            android:textColor="#171717"

            android:textSize="56sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/menubar">

        <GridLayout
            android:padding="10sp"
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowOrderPreserved="true"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:layout_width="66pt"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp">



                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".MapsActivity" />



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="33pt"
                android:layout_height="125sp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/coordinates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3sp"
                        android:layout_alignParentStart="true"
                        android:background="#FFC107"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:shadowColor="@color/black"
                        android:shadowDx="0"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:text="coordinates"
                        android:textColor="@color/white" />


                    <TextView
                        android:id="@+id/latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Latitude" />

                    <TextView
                        android:id="@+id/longitude"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/latitude"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Longtidue" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="33pt"
                android:layout_height="125sp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="@color/orange100"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:paddingBottom="3sp"
                        android:shadowColor="@color/black"
                        android:shadowDx="0"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:text="position"
                        android:textColor="@color/white" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:padding="4sp">

                        <TextView
                            android:id="@+id/x"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="x:" />

                        <TextView
                            android:id="@+id/y"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="y:" />


                        <TextView
                            android:id="@+id/z"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/y"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="z:" />




                    </LinearLayout>


                    <ImageView
                        android:id="@+id/phonePosition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/phoneposition" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="125sp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp">

                <LinearLayout
                    android:id="@+id/temperatureLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/gradient_list100"
                    >

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/ambientTempLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/thermostat" />

                        <TextView
                            android:gravity="center"
                            android:id="@+id/ambientTemp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textSize="16sp"
                            android:shadowColor="@color/black"
                            android:shadowDx="0"
                            android:shadowDy="5"
                            android:shadowRadius="10"
                            android:text="0â„ƒ"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ambientTempLayout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pressure"/>
                        <TextView
                            android:id="@+id/deviceTemp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 hPa"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:shadowColor="@color/black"
                            android:shadowDx="0"
                            android:shadowDy="5"
                            android:shadowRadius="10"
                            android:textColor="@color/white"/>


                    </LinearLayout>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="33pt"
                android:layout_height="250sp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                android:layout_marginBottom="25sp"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp">


                <RelativeLayout
                    android:id="@+id/lightLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_list110"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15sp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lightmode"
                        android:layout_marginBottom="10sp"/>


                    <TextView
                        android:gravity="center"
                        android:id="@+id/lightTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 lx"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textSize="16sp"
                        android:shadowColor="@color/black"
                        android:shadowDx="0"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="33pt"
                android:layout_height="250sp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                android:layout_marginBottom="25sp"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/batteryLayout"
                    android:background="@drawable/gradient_list120">

                    <TextClock
                        android:id="@+id/txtClok"
                        android:gravity="center"
                        android:layout_marginTop="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:format24Hour="hh:mm:ss a"
                        android:textSize="16sp"
                        android:shadowColor="@color/black"
                        android:shadowDx="0"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="10sp"
                            android:background="@drawable/battery" />

                        <TextView
                            android:id="@+id/batteryTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center"
                            android:shadowColor="@color/black"
                            android:shadowDx="0"
                            android:shadowDy="5"
                            android:shadowRadius="10"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                    </LinearLayout>








                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="33pt"
                android:layout_height="250sp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                android:layout_marginBottom="25sp"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="53sp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:text="SET"
                            android:textColor="@color/gray100"
                            android:textSize="49sp"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7sp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:text="TEMPERATURE"
                            android:textAlignment="center"
                            android:textColor="@color/gray100"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/alertButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:layout_weight="1"
                            android:background="@color/gray100"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:shadowColor="@color/black"
                            android:shadowDx="0"
                            android:shadowDy="5"
                            android:shadowRadius="10"
                            android:text="ON"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-black"
                            android:gravity="top|center"

                            android:text="ALERT!"
                            android:textColor="@color/gray100"
                            android:textSize="26sp"
                            android:textStyle="bold" />


                    </LinearLayout>


<!--                        android:shadowColor="@color/black"-->
<!--                        android:shadowDx="0"-->
<!--                        android:shadowDy="5"-->
<!--                        android:shadowRadius="10"-->





                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </androidx.core.widget.NestedScrollView>
    <!--    </RelativeLayout>-->


</androidx.constraintlayout.motion.widget.MotionLayout>